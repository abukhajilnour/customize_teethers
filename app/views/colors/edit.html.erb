<div class="login">
  <div class="wrap">
    <ul class="breadcrumb breadcrumb__t"> New Color</ul>
      <div class="content-top">

          <% if @color.errors.any? %>       
            <% @color.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
          <% end %>
          <%= form_for @color,:url =>{ :action => :create, :id => @teether.id} do |c| %>
            <div class="to">
              <%= c.text_field :name ,placeholder: "Color Name", class: "text"%>
            </div><br><br><br><br>
            <div class="submit">
              <%= c.submit %>
            </div>
          <% end%>
        </form>
                
