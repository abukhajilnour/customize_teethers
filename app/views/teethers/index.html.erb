<div class="mens">    
  <div class="main">
     <div class="wrap">
      <h2 class="head">Teethers</h2>
        <div class="mens-toolbar">
          <div class="sort">
            <div class="sort-by">
              <h3 id="sort"><label>Sort: </label><span> | </span><span><%= sortable "price" %><span class="caret"></span></span></h3>
            </div>
          </div>
